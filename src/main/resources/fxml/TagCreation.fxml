<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      stylesheets="@../css/General.css"
      fx:controller="com.silverhetch.calisto.javafx.tag.TagCreation">
    <HBox>
        <Text text="%tagCreation.tagTitle"/>
        <TextField fx:id="tagName"/>
    </HBox>
    <Button fx:id="confirm" text="%app.confirm" onMouseClicked="#onConfirmClick"/>
</VBox>
