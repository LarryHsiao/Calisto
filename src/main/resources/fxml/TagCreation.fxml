<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          stylesheets="@../css/General.css"
          fx:controller="com.silverhetch.calisto.javafx.tag.TagCreation">
    <HBox GridPane.columnIndex="0" GridPane.rowIndex="0">
        <Text text="%tagCreation.tagFieldLabel"/>
        <TextField fx:id="tagName"/>
    </HBox>
    <fx:include source="component/ImageChoose.fxml" fx:id="imageChoose" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
    <Button GridPane.rowIndex="1" fx:id="confirm" text="%app.confirm" onMouseClicked="#onConfirmClick"
            GridPane.columnIndex="0"/>
</GridPane>
