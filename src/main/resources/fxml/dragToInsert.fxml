<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="480" minWidth="640" onDragExited="#onDragExited"
            onDragDropped="#onDragDropped"
            onDragOver="#onDragOver" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.silverhetch.calisto.javafx.DragToInsert">
    <center>
        <StackPane>
            <ListView fx:id="contentList" prefHeight="200" prefWidth="200" BorderPane.alignment="CENTER"/>
            <Label fx:id="dragIndicator" visible="false" text="%dragToInsert.dragToInsert"
                   BorderPane.alignment="CENTER"/>
        </StackPane>
    </center>
    <left>
        <GridPane BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="200.0" prefWidth="200.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS"/>
            </rowConstraints>
            <TextField fx:id="tagFilterField" onAction="#onFilterChanged"
                       GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <ListView fx:id="rootList" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        </GridPane>
    </left>
</BorderPane>
